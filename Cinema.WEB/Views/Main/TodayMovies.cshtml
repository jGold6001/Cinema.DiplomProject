@model List<Cinema.WEB.Models.MovieModelMainPage>

@{
    ViewBag.Title = "TodayMovies";
}

<div class="col-sm-12 col-md-12 col-xs-12 col-12">

    <!-- Movie variant with time -->

    <!--left-Dark-->
    <div class="movie movie--test movie--test--dark movie--test--left">
        <div class="movie__images">
            <a href="movie-page-left.html" class="movie-beta__link">
                <img class="img_size" alt='' src="@Model[0].PosterURL">
            </a>
        </div>
        <div class="movie__info">
            <a href='movie-page-left.html' class="movie__title">@Model[0].Title (@Model[0].Year)  </a>
            <p class="movie__time">@Model[0].Duration мин</p>
            <p class="movie__option">
                @foreach (var genre in Model[0].Genres)
                {

                    if (genre == Model[0].Genres.Last() || Model[0].Genres.Count == 1)
                    {
                        <span>@genre</span>
                    }
                    else
                    {
                        <span>@genre,</span> 
                    }

                }
               
            </p>
            <div class="box">
                <div>
                    @Html.Raw(HttpUtility.HtmlDecode(Model[0].Description))
                </div>
            </div>


            <div class="movie_go_to_link">
                <a href="movie-page-left.html" class="go_to_link">перейти</a>
            </div>
        </div>
    </div>

